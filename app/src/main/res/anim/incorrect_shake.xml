<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:interpolator="@android:anim/decelerate_interpolator">

    <!--
        duration    - продолжительность анимации в миллисекундах
        fromXDelta  - определяет смещение компонента View в начальной позиции анимации
        toXDelta    - смещение View в конечной позиции анимации
        startOffset - величина задержки
    -->
    <translate
        android:duration="100"
        android:fromXDelta="0"
        android:toXDelta="-5%p"/>

    <translate
        android:duration="100"
        android:fromXDelta="-5%p"
        android:startOffset="100"
        android:toXDelta="5%p"/>

    <translate
        android:duration="100"
        android:fromXDelta="5%p"
        android:startOffset="200"
        android:toXDelta="-5%p"/>
</set>